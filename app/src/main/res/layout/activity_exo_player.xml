<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"
            tools:context=".exoplayer.acitivity.ExoPlayerActivity">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/exoPlayer"
                android:layout_height="wrap_content" android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:use_controller="true"
                app:show_timeout="5000"
                app:controller_layout_id="@layout/exo_playback_control_view"
                app:layout_constraintDimensionRatio=""/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/exoPlayer"/>

    </android.support.constraint.ConstraintLayout>
</layout>